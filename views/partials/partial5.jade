                                    data-placement="top", tooltip) {{ naName[1] | capitalize}}
                        br
                        label(class="label") {{ ifPresentNames[3] | capitalize}}:
                        button(type="button", class="btn btn-default", ng-model="nodularAbnormalities.ifPresent.treeInBud", ng-click="nodularAbnormalities.ifPresent.treeInBud = !nodularAbnormalities.ifPresent.treeInBud",
                                title="{{ nodularAbnormalities.ifPresent.treeInBud }}", data-original-titel="{{ nodularAbnormalities.ifPresent.treeInBud }}", data-toggle="tooltip",
                                    data-placement="top", tooltip) {{ naName[1] | capitalize}}
                        br
                        label(class="label") {{ ifPresentNames[4] | capitalize}}:
                        button(type="button", class="btn btn-default", ng-model="nodularAbnormalities.ifPresent.fissural", ng-click="nodularAbnormalities.ifPresent.fissural = !nodularAbnormalities.ifPresent.fissural",
                                title="{{ nodularAbnormalities.ifPresent.fissural }}", data-original-titel="{{ nodularAbnormalities.ifPresent.fissural }}", data-toggle="tooltip",
                                    data-placement="top", tooltip) {{ naName[1] | capitalize}}
                        br
                        label(class="label") {{ ifPresentNames[3] | capitalize}}:
                        button(type="button", class="btn btn-default", ng-model="nodularAbnormalities.ifPresent.random", ng-click="nodularAbnormalities.ifPresent.random = !nodularAbnormalities.ifPresent.random",
                                title="{{ nodularAbnormalities.ifPresent.random }}", data-original-titel="{{ nodularAbnormalities.ifPresent.random }}", data-toggle="tooltip",
                                    data-placement="top", tooltip) {{ naName[1] | capitalize}}

