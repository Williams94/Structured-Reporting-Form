.jumbotron
    .row
        .col-lg-12
            h2(class="h2") Descriptors
        .col-lg-12
            form(class="form-horizontal", ng-submit="submit()")
                div(class="col-lg-4 form-group")
                    h4(class="h4", id="pcName2") {{ pcName.name }} continued...
                    label(class="label", for="airwayPlugging") {{ pcName.peribronchovascularComponent[2].name }}:
                    br
                    select(ng-model="airwayPlugging", class="form-control", id="airwayPlugging")
                        option {{ airwayPluggingName[1] | capitalize }}
                        option {{ airwayPluggingName[2] | capitalize }}
                        option {{ airwayPluggingName[3] | capitalize }}
                    textarea(class="form-control comment", ng-model="airwayPluggingComment", placeholder="Comment...", id="airwayPluggingComment")

                    label(class="label", for="mosaicism") {{ pcName.peribronchovascularComponent[3].name }}:
                    br
                    select(ng-model="mosaicism", class="form-control", id="mosaicism")
                        option {{ mosaicismName[1] | capitalize }}
                        option {{ mosaicismName[2] | capitalize }}
                        option {{ mosaicismName[3] | capitalize }}
                    textarea(class="form-control comment", ng-model="mosaicismComment", placeholder="Comment...", id="mosaicismComment")

                div(class="col-lg-4 form-group", id="middleCol2")
                    label(class="label", for="consolidation", id="consolidationLabel") {{ pcName.peribronchovascularComponent[4].name }}:
                    br
                    select(ng-model="consolidation", class="form-control", id="consolidation")
                        option {{ consolidationName[1] | capitalize }}
                        option {{ consolidationName[2] | capitalize }}
                        option {{ consolidationName[3] | capitalize }}
                    textarea(class="form-control comment", ng-model="consolidationComment", placeholder="Comment...", id="consolidationComment")

