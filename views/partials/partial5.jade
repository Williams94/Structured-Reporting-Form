                        title="{{ nodularAbnormalities.present }}", data-original-titel="{{ nodularAbnormalities.present }}", data-toggle="tooltip",
                        data-placement="top", id="naButton", tooltip) {{ naName[1] | capitalize}}

                    br
                    div(class="form-group", ng-show="nodularAbnormalities.present")
